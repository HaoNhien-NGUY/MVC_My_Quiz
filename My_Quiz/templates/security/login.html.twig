{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="row justify-content-center">
		<div class="col-7">
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.username }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}

				<h1 class="mb-5 font-weight-normal">Please sign in</h1>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<label for="inputUsername">Username</label>
				<input type="username" value="{{ last_username }}" name="username" id="inputusername" class="form-control" required autofocus>
				<label for="inputPassword">Password</label>
				<input
				type="password" name="password" id="inputPassword" class="form-control" required>

				<div class="checkbox my-3">
					<label>
						<input type="checkbox" name="_remember_me">
						Remember me
					</label>
				</div>


				<button class="btn btn-primary" type="submit">
					Sign in
				</button>
			</form>
		</div>
	</div>
{% endblock %}
