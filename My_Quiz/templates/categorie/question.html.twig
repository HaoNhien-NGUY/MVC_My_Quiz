{% extends 'base.html.twig' %}

{% block title %}
	{{ categorie.name }}
{% endblock %}

{% block body %}
	<h2 class="text-center mb-5">
		{{ categorie.name }}</h2>

	<div class="row justify-content-center">
		<div class="col-9">
            <div class="question-card">
                <h1 class="text-center text-primary mb-5"><b> {{ question.question }} </b></h1>
                {% for reponse in reponses %}
                    <h5>{{ reponse.reponse }}</h5>
                {% endfor %}
                {{ form_start(form) }}
                {{ form_end(form) }}
            </div>
		</div>
	</div>

{% endblock %}
